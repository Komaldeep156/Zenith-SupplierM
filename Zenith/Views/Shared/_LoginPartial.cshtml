@using Microsoft.AspNetCore.Identity
@using Zenith.Repository.DomainModels

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto position-relative">
@if (SignInManager.IsSignedIn(User))
{
            <a class="btn dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="far fa-user-circle"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu2" style="width:250px;right:0;left:auto" >
                <li class="nav-item py-3 text-center border-bottom">
                    Hi,<br/>
                    @UserManager.GetUserName(User)
                </li>
                <li class="nav-item">
                    <a asp-controller="Setting" asp-action="Index" class="list-group-item py-3 list-group-item-action border-0 d-flex align-items-center">
                        <span class="ml-2">Change password</span>
                    </a>
                    <a class="list-group-item py-3 list-group-item-action border-0 d-flex align-items-center">
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                            <button id="logout" type="submit" class="nav-link text-dark border-0 btn p-0">Logout</button>
                        </form>
                    </a>
            </ul>
