    function showRejectContainer(vendorId) {
        $('.divRejectReasonDDL_' + vendorId).show();

        var selectElement = $('.reasonSelectContainer_' + vendorId);
        if (selectElement.length) {
            selectElement.removeClass('disable'); 
        }
    }
    
