@model Zenith.BLL.DTO.VacationRequestsDTO
@{
    ViewData["Title"] = "Vacation Details";
}

<style>

    .title span {
        color: #C72C1C;
    }
    /* vacation Details Card Styling */
    .vacation-details {
        background-color: #fff;
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        margin-top: 20px;
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

        .vacation-details:hover {
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
            transform: translateY(-5px);
        }

        .vacation-details h2 {
            color: #00387f;
            font-size: 2em;
            margin-bottom: 15px;
            font-weight: bold;
        }

        .vacation-details p {
            font-size: 1.1em;
            color: #555;
            line-height: 1.7;
            margin-bottom: 20px;
        }


        /* Action Buttons Styling */
        .vacation-details .btn {
            padding: 12px 24px;
            font-size: 1.1em;
            border-radius: 6px;
            text-transform: uppercase;
            font-weight: 600;
            border: none;
            margin-right: 20px;
            cursor: pointer;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

</style>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar (HTML kept, but CSS removed) -->
        <div class="col-md-3 col-lg-2 px-0 shadow-sm sidebar">
            <partial name="_Sidebar" />
        </div>

        <!-- vacation Details Section -->
        <div class="col-md-9 col-lg-10 ml-md-auto mt-3">
            <div class="container">
                <h1 class="py-2 mb-0 title"><span> Vacation Details</span></h1>
                <!-- vacation Details Card -->
                <div class="vacation-details">

                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Approval Type:</strong> VACATION</p>
                                <p><strong>User Request#:</strong> @Model.RequestNum</p>
                                <p><strong>User Full Name:</strong> @Model.RequestedByUser?.FullName</p>
                                <p><strong>User Role:</strong> @Model.RequestedByUserRoleName</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>From Date:</strong> @Model.StartDate.ToString("MM/dd/yyyy")</p>
                                <p><strong>To Date:</strong> @Model.EndDate.ToString("MM/dd/yyyy")</p>
                                <p><strong>Created On:</strong> @Model.CreatedOn.ToString("MM/dd/yyyy HH:mm:ss")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    // Add interactivity as needed
</script>
