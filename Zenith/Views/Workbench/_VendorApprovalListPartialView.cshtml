@model IEnumerable<Zenith.BLL.DTO.GetVendorsListDTO>

    <style>
    .reasonSelectContainer.disable {
        pointer-events: none; /* Disable interaction */
        opacity: 0.5; /* Make it appear disabled */
        background-color: #f0f0f0; /* Optionally change the background to simulate a disabled state */
    }
    </style>

<table class="table table-striped table-bordered" style="width:128%">
    <thead class="bg-primary text-white text-center text-nowrap">
        <tr>
            <th><b>Approval Type</b></th>
            <th><b>Vendor Req No.</b></th>
            <th><b>Supplier NAME</b></th>
            <th><b>Supplier Country</b></th>
            <th><b>Created By</b></th>
            <th><b>Created On</b></th>
            <th><b>Critical/Non-Critical</b></th>
            <th><b>Work Status</b></th>
            <th><b>Status</b></th>
            <th><b>Rejected Reason</b></th>
            <th><b>Comments</b></th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
            @foreach (var vendor in Model)
            {
                <tr>
                    <td class="text-right"><b>VIR</b></td>
                    <td class="text-center">
                        <a title="View" target="_blank" class="nav-link" asp-controller="Workbench" asp-action="VendorViewTemplate" asp-route-VendorsInitializationFormId="@vendor.Id">
                            @vendor.RequestNum
                        </a>
                    </td>
                    <td class="text-center">@vendor.SupplierName</td>
                    <td class="text-center">@vendor.DropdownValues_SupplierCountry?.Value</td>
                    <td class="text-center">@vendor.ApplicationUser_CreatedBy.UserName</td>
                    <td class="text-center">@vendor.CreatedOn.ToString("yyyy/MM/dd")</td>
                    <td class="text-center">
                       <select onchange="onChangeNonCriticalEvent('@vendor.Id', this)" class="form-select w-100 criticalDDLSelectContainer_@vendor.Id">
                            <option value="">Select</option>
                            @if (vendor.IsCritical)
                            {
                                <option value="Y" selected>Critical</option>
                                <option value="N">Non-Critical</option>
                            }
                            else
                            {
                                <option value="Y" >Critical</option>
                            <option value="N" selected>Non-Critical</option>
                            }
                            
                        </select>
                    </td>
                    <td class="text-center">@vendor.DropdownValues_Status?.Value</td>
                    <td>
                        @if (vendor.IsApproved)
                        {
                            <div class="text-success text-center">Approved</div>
                        }
                        else if (!vendor.IsApproved && vendor.DropdownValues_RejectionReason != null)
                        {
                            <div class="text-danger text-center">Rejected</div>
                        }
                        else
                        {
                            <div class="statusContainer text-center" data-vendor-id="@vendor.Id">
                                <button type="button" class="btn btn-success approve-btn" onclick="changeStatus('@vendor.Id', 'true')">Approve</button>
                                <button type="button" class="btn btn-danger reject-btn" onclick="showRejectContainer('@vendor.Id')">Reject</button>
                            </div>
                        }
                    </td>
                    <td>
                        @if (!vendor.IsApproved && vendor.DropdownValues_RejectionReason != null)
                        {
                            <div class="text-center">
                                @vendor.DropdownValues_RejectionReason?.Value
                            </div>
                        }
                        else
                        {
                            <div style="display:none"  class="form-group divRejectReasonDDL_@vendor.Id">
                                <select onchange="onChangeRejectReasonDDLEvent('@vendor.Id')" class="form-select w-100 reasonSelectContainer reasonSelectContainer_@vendor.Id">
                                    @if (ViewBag.rejectreason != null)
                                    {
                                        <option value="" selected>Select</option>
                                        foreach (var reason in ViewBag.rejectreason.Values)
                                        {
                                            <option value="@reason.Id">@reason.Value</option>
                                        }
                                    }
                                </select>
                            </div>
                        }
                            
                    </td>
                    <td>
                            <div class="form-group">
                                <textarea type="text" placeholder="Comment.." class="form-control comment_@vendor.Id"
                                      onblur="changeStatus('@vendor.Id', 'comment', null)">
                                @vendor.Comments
                                </textarea>
                            </div>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>

</table>
